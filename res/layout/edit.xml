<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:fitsSystemWindows="false"
    android:measureWithLargestChild="false"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.99"
        android:animateLayoutChanges="false"
        android:overScrollMode="ifContentScrolls"
        android:paddingLeft="10dp"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:fitsSystemWindows="false"
            android:measureWithLargestChild="false" >

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >



                <TextView
                    android:id="@+id/nameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Name:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/nameedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Modellname"
                    android:layout_span="2" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/typLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="false"
                    android:text="Typ:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/typspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="fill_parent"
                    android:entries="@array/typ"
                    android:prompt="@string/spinner_prompt"
                    android:spinnerMode="dropdown"
                     android:layout_span="2"
                    tools:listitem="@android:layout/simple_spinner_item" />

            </TableRow>
               <TableRow
                android:id="@+id/tableRow13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/artLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="false"
                    android:text="Art:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/artspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:dropDownWidth="fill_parent"
                    android:entries="@array/art"
                    android:prompt="@string/spinner_prompt"
                    android:spinnerMode="dropdown"
                     android:layout_span="2"
                    tools:listitem="@android:layout/simple_spinner_item" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beschr.:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/beschreibungedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_span="2"
                    android:gravity="top"
                    android:hint="Beschreibung"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:scrollHorizontally="true"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical" />

            </TableRow>
              <TableRow
                android:id="@+id/tableRow14"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Herst.:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/hesrtelleredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_span="2"
                    android:gravity="top|center_vertical"
                    android:hint="@string/hersteller"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:scrollHorizontally="true"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datum:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/dateedit"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:inputType="date" />

               

                <ImageButton
                    android:id="@+id/dateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar_date_small" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/pad1"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spannw.:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/spannweiteedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:hint="Spannweite"
                    android:layout_marginRight="5dp" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Länge:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/laengeedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:hint="Rumpflänge"
                    android:layout_marginRight="5dp" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Gewicht:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/gewichtedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                                android:layout_span="2"
                                android:hint="Gewicht (gr)"
                   android:layout_marginRight="5dp" />
            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="RC Daten:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/rc_dataedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_span="2"
                    android:gravity="top"
                    android:hint="RC-Einstellung"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:scrollHorizontally="true"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="1dp"
                    android:text="Ausst.:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/aussttungedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_span="2"
                    android:gravity="top"
                    android:hint="Ausstattung"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:scrollHorizontally="true"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbars="vertical" />

            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/xxLarge" >

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/statusspinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:dropDownWidth="fill_parent"
                    android:entries="@array/status"
                    android:prompt="@string/spinner_prompt2"
                    tools:listitem="@android:layout/simple_spinner_item" />
            </TableRow>
<View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />

            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center" >

                <ImageView
                    android:id="@+id/imageViewChoose"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_span="3"
                    android:paddingLeft="10dp"
                    android:src="@drawable/no_photo" />

            </TableRow>
 <View
    android:layout_width="fill_parent"
    android:layout_height="1dip"
    android:background="#FF00" />
            </TableLayout>

    </ScrollView>

  <TableRow
      android:id="@+id/tableRow11"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="10dp"
      android:gravity="center"
      android:visibility="visible" >

      <Button
          android:id="@+id/savebutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Save" />

      <Button
          android:id="@+id/cancelbutton"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Cancel" />
       
    </TableRow>
    
</LinearLayout>